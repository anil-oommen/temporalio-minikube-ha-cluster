apiVersion: skaffold/v4beta6
kind: Config
metadata:
  name: cass-helm
deploy:
  helm:
    releases:
      - name: cassandra
        chartPath: .
        valuesFiles:
          - values.yaml
        version: 10.4.2
portForward:
- resourceType: service
  resourceName: cassandra
  namespace: default
  port: 9042
  localPort: 9042